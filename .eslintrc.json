/**
 * @fileoverview eslint 配置文件
 * @authors liyifei
 * @date 2017/02
 */
{
    // 运行环境
    "env": {
        "browser": true,
        "commonjs": true,
        "amd": true,
        "node": true
    },
    // 解析器选项
    "parserOptions": {
        // ecma 版本
        "ecmaVersion": 5,
        // 代码类型
        "sourceType": "module",
        // 语言特性
        "ecmaFeatures": {
            // 全局使用return
            "globalReturn": true,
            // strict mode
            "impliedStrict": true,
            // jsx 语法
            "jsx": true,
            "experimentalObjectRestSpread": false
        }
    },
    // 扩展
    // 继承推荐的规则
    "extends": "eslint:recommended",
    // 全局变量
    "globals": {
        "$": true,
        "ga": true,
        "LEPass": true,
        "LETV": true,
        "Job": true
    },
    // 插件
    "plugins": [
        "react"
    ],
    // 规则
    "rules": {
        /* 对 ESLint 默认推荐规则的修改 */
        // 警告
        // 禁止使用 console
        "no-console": 1,
        // 禁止使用 空格 和 tab 混合缩进
        "no-mixed-spaces-and-tabs": 1,
        // 禁止出现未使用过的变量（不检查参数）
        "no-unused-vars": [1, {"args": "none"}],
        // 禁止不必要的分号
        "no-extra-semi": 1,
        // 禁用未声明的变量
        "no-undef": 1,
        // 禁止在嵌套的块中出现变量声明（可选）或 function 声明
        "no-inner-declarations": 1,
        // 禁止出现空语句块
        "no-empty": 1,
        // 禁止在字符串和注释之外不规则的空白
        "no-irregular-whitespace": 1,
        // 禁止多次声明同一变量
        "no-redeclare": 1,
        // 禁止在正则表达式中使用控制字符
        "no-control-regex": 1,
        // 禁止 function 定义中出现重名参数
        "no-dupe-args": 1,

        /* 强制错误类，！！！重要规则！！！ */
        // 条件判断，必须使用===和!==
        "eqeqeq": 2,
        // switch 语句中必须有 default
        "default-case": 2,
        // 禁止在 else 前有 return
        "no-else-return": 2,
        // 禁用 eval()
        "no-eval": 2,
        // 禁用隐式的eval()
        "no-implied-eval": 2,
        // 禁止浮点小数
        "no-floating-decimal": 2,
        // 禁止在返回语句中赋值
        "no-return-assign": 2,
        // 禁止自身比较
        "no-self-compare": 2,
        // 禁用 with 语句
        "no-with": 2,
        // 不允许初始化变量值为 undefined
        "no-undef-init": 2,
        // 不允许使用 undefined 变量
        "no-undefined": 2,
        // 禁止出现空函数
        "no-empty-function": 2,
        // 强制在语句末尾使用分号（主观）
        "semi": [2, "always"],
        // 禁止 if 语句作为唯一语句出现在 else 语句块中（主观）
        "no-lonely-if": 2,
        // 强制使用一致的换行符风格（主观）
        "linebreak-style": [2, "unix"],

        /* 警告类，次要规则 */
        // 禁用 alert
        "no-alert": 1,
        // 禁止变量定义前使用
        "no-use-before-define": 1,
        // 变量必须在声明时初始化
        "init-declarations": 1,
        // var 语句应该在块级作用域范围之内
        "block-scoped-var": 1,
        // 要求必须有基数
        "radix": 1,
        // 语句大括号规则，所有语句不能省略大括号
        "curly": [1, "all"],
        // 判断语句复杂度，限制10圈
        "complexity": [1, 10],
        // 禁止对函数参数再赋值
        "no-param-reassign": 1,
        // 禁止出现多个空格
        "no-multi-spaces": 1,
        // 强制使用一致的缩进，使用空格缩进，1个tab=4个空格（主观）
        "indent": [1, "tab"],
        // 驼峰命名变量（主观）
        "camelcase": 1,
        // 禁止使用拖尾逗号（主观）
        "comma-dangle": 1,
        // 禁用行尾空白（主观）
        "no-trailing-spaces": 1,
        // 强制在逗号周围使用空格，只在逗号后加空格（主观）
        "comma-spacing": [1, {"before": false, "after": true}],
        // 强制块语句的最大可嵌套深度（主观）
        "max-depth": [1, {"max": 4}],
        // 强制回调函数最大嵌套深度（主观）
        "max-nested-callbacks": [1, {"max": 4}],
        // 限制函数定义中最大参数个数（主观）
        "max-params": [1, {"max": 5}],
        // 禁止混合使用不同的操作符（主观）
        "no-mixed-operators": 1,
        // 不允许多个空行，最多2行（主观）
        "no-multiple-empty-lines": [1, {"max": 2}],
        // 文件末尾保留一行空行（主观）
        "eol-last": 1
    }
}
