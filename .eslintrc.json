/**
 * @fileoverview eslint 配置文件
 * @authors liyifei
 * @date 2017/02
 */
{
    // 运行环境
    "env": {
        "browser": true,
        "commonjs": true
    },
    // 解析器选项
    "parserOptions": {
        // ecma 版本
        "ecmaVersion": 5,
        // 代码类型
        "sourceType": "script",
        // 语言特性
        "ecmaFeatures": {
            // 全局使用return
            "globalReturn": true,
            // strict mode
            "impliedStrict": true,
            // jsx 语法
            "jsx": true,
            "experimentalObjectRestSpread": false
        }
    },
    // 扩展
    // 继承推荐的规则
    "extends": "eslint:recommended",
    // 全局变量
    "globals": {},
    // 插件
    "plugins": [
        "react"
    ],
    // 规则
    "rules": {
        // 对 eslint 默认推荐规则修改
        // 禁止使用 console - 警告
        "no-console": ["warn"],
        // 禁止 function 定义中出现重名参数 - 关闭
        "no-dupe-args": ["off"],

        // 自定义
        // 禁用 alert - 禁止
        "no-alert": ["error"],
        // var 语句作用域范围 - 警告
        "block-scoped-var": ["warn"],
        // 判断语句复杂度，限制10圈 - 警告
        "complexity": ["warn", 10],
        // 语句大括号规则，所有语句不能省略大括号 - 警告
        "curly": ["warn", "all"],
        // switch 语句中必须有 default
        "default-case": ["error"],
        // 必须使用===和!==
        "eqeqeq": ["error"],
        // 禁止在 else 前有 return
        "no-else-return": ["error"],
        // 禁止出现空函数
        "no-empty-function": ["error"],
        // 禁用 eval()
        "no-eval": ["error"],
        // 禁用隐式的eval()
        "no-implied-eval": ["error"],
        // 禁止浮点小数
        "no-floating-decimal": ["error"],
        // 禁止 this 关键字在类或类对象之外出现
        "no-invalid-this": ["error"],
        // 禁止出现多个空格 - 警告
        "no-multi-spaces": ["warn"],
        // 禁止多行字符串
        "no-multi-str": ["error"],
        // 禁止对函数参数再赋值
        "no-param-reassign": ["error"],
        // 禁止在返回语句中赋值
        "no-return-assign": ["error"],
        // 禁止自身比较
        "no-self-compare": ["error"],
        // 禁用 with 语句
        "no-with": ["error"],
        // 要求必须有基数
        "radix": ["warn"],
        // 变量必须在声明时初始化
        "init-declarations": ["error"],
        // 不允许初始化变量值为 undefined
        "no-undef-init": ["error"],
        // 不允许使用undefined变量
        "no-undefined": ["error"],
        // 禁止定义前使用
        "no-use-before-define": ["error"],

        // 个性化配置
        // 大括号风格要求
        // "brace-style": ["warn", "1tbs"],
        // 驼峰命名变量 - 警告
        "camelcase": ["warn"],
        // 禁止使用拖尾逗号 - 警告
        "comma-dangle": ["warn"],
        // 强制在逗号周围使用空格 - 警告
        "comma-spacing": ["warn", {"before": false, "after": true}],
        // 强制文件末尾保留一行空行
        "eol-last": ["error"],
        // 强制使用一致的缩进
        "indent": ["error", "tab"],
        // 强制块语句的最大可嵌套深度 - 警告
        "max-depth": ["warn", 4],
        // 强制回调函数最大嵌套深度 - 警告
        "max-nested-callbacks": ["warn", 4],
        // 限制函数定义中最大参数个数
        "max-params": ["warn", 5],
        // 禁止 if 语句作为唯一语句出现在 else 语句块中
        "no-lonely-if": ["error"],
        // 禁止混合使用不同的操作符
        "no-mixed-operators": ["warn"],
        // 不允许多个空行，最多2行
        "no-multiple-empty-lines": ["warn", 2],
        // 禁用行尾空白
        "no-trailing-spaces": ["error"],
        // 强制在语句末尾使用分号
        "semi": ["error", "always"],
        // 强制使用一致的换行符风格
        "linebreak-style": ["error", "unix"]

        // 强制在关键字前后使用一致的空格
        // 强制在对象字面量的属性中键和值之间使用一致的间距
        // 强制注释的位置

        // 强制使用一致的反勾号、双引号或单引号
        // "quotes": [
        //     "error",
        //     "single"
        // ],        
    }
}