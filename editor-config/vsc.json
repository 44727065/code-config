/**
 * @fileoverview visual studio code 常用配置
 * @authors liyifei
 * @data 2017/03
 */
// 将设置放入此文件中以覆盖默认设置
{
    // 1个 tab 等于4个空格
    "editor.tabSize": 4,
    // 用空格替代 tab
    "editor.insertSpaces": true,
    // 显示行号
    "editor.lineNumbers": "on",
    // 删除尾随自动插入的空格
    "editor.trimAutoWhitespace": true,
    // 保存时删除尾随空格
    "files.trimTrailingWhitespace": true,
    // 保存时文件末尾插入新行
    "files.insertFinalNewline": true,
    // 空白字符显示方式 - 全部显示
    "editor.renderWhitespace": "all",
    // 高亮光标所在行
    "editor.renderLineHighlight": "all",
    // js-beautify 代码格式化配置文件（该项目根据实际目录配置）
    "beautify.config": "/Users/yifei/cloud/mine/百度云同步盘/workspace/dev/config/eslint-config/.jsbeautifyrc.json",
    // 关闭 vsc 自带的格式化
    "javascript.format.enable": false,
    // 启用保存文件自动格式化
    "editor.formatOnSave": true,
    // ESLint 配置（该项根据实际目录配置）
    "eslint.options": {
        "configFile": "/Users/yifei/cloud/mine/百度云同步盘/workspace/dev/config/eslint-config/.eslintrc.json",
        "ignorePath": "/Users/yifei/cloud/mine/百度云同步盘/workspace/dev/config/eslint-config/.eslintignore"
    },
    // 字号（主观）
    "editor.fontSize": 16,
    // 缩进参考线（主观）
    "editor.renderIndentGuides": true,
    // 控制编辑器是否可以滚动到最后一行之后 - 否（主观）
    "editor.scrollBeyondLastLine": false,
    // git 工具开关（VSC 独有）
    "git.enabled": true,
    // 窗口缩放 - 关闭
    "window.zoomLevel": 0
}
