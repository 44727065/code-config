// 将设置放入此文件中以覆盖默认设置
{
    // 格式配置
    // 1个 tab 等于4个空格
    "editor.tabSize": 4,
    // 用空格替代 tab
    "editor.insertSpaces": true,
    // 显示行号
    "editor.lineNumbers": "on",
    // 删除尾随自动插入的空格
    "editor.trimAutoWhitespace": true,
    // 保存时删除尾随空格
    "files.trimTrailingWhitespace": true,
    // 保存时文件末尾插入新行
    "files.insertFinalNewline": true,
    // 空白字符显示方式 - 全部显示
    "editor.renderWhitespace": "all",
    // 高亮光标所在行
    "editor.renderLineHighlight": "all",
    // 启用保存文件自动格式化
    "editor.formatOnSave": true,
    // 在窗口可视区域自动换行
    "editor.wordWrap": "wordWrapColumn",
    // 换行符，统一 unix
    "files.eol": "\n",
    // 控制换行列数（主观）
    "editor.wordWrapColumn": 120,
    // 字号（主观）
    "editor.fontSize": 16,
    // 缩进参考线（主观）
    "editor.renderIndentGuides": true,
    // 控制编辑器是否可以滚动到最后一行之后 - 否（主观）
    "editor.scrollBeyondLastLine": false,
    // git 工具开关（VSC 独有）
    "git.enabled": true,
    // 关闭编辑器的 html 格式化（VSC 独有）
    "html.format.enable": false,

    // 插件配置
    // beautify插件配置
    // 代码格式化配置文件（该项目根据实际目录配置）
    "beautify.config": "/Users/yifei/cloud/mine/百度云同步盘/workspace/dev/tools/code-config/.jsbeautifyrc.json",
    "beautify.language": {
        "css": [],
        "html": []
    },
    // ESLint 配置（该项根据实际目录配置）
    "eslint.options": {
        "configFile": "/Users/yifei/cloud/mine/百度云同步盘/workspace/dev/tools/code-config/.eslintrc.json",
        "ignorePath": "/Users/yifei/cloud/mine/百度云同步盘/workspace/dev/tools/code-config/.eslintignore"
    }
}
