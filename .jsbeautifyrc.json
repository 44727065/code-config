{
    // 通用
    // 缩进4个空格
    "indent_size": 4,
    "indent_char": " ",
    // unix 换行符
    "eol": "\n",
    // 缩进级别
    "indent_level": 0,
    // 不用 tab 缩进
    "indent_with_tabs": false,
    // 保留空行，在一个代码块最大保留3个空行
    "preserve_newlines": true,
    "max_preserve_newlines": 3,
    // 文件结尾加一行空行
    "end_with_newline": true,
    // 换行长度，0-关闭
    "wrap_line_length": 0,

    // HTML
    "html": {
        "brace_style": "collapse",
        // 缩进 head body
        "indent_inner_html": false,
        // script 代码缩进
        "indent_scripts": "keep",
        // 属性缩进
        "wrap_attributes": "auto",
        "wrap_attributes_indent_size": "indent-size",
        // 设置某些标签，不需要格式化
        // "unformatted": "",
        // 设置某些标签，内容不需要格式化
        "content_unformatted": "pre",
        // 设置某些标签，添加额外空行
        "extra_liners": "head,body,html"
    },

    // CSS
    "css": {
        // 在规则之间添加换行 - 关闭
        "newline_between_rules": false,
        // 在选择器之间添加换行 - 关闭
        "selector_separator_newline": false
    },

    // JS
    "js": {
        // 关闭 jslint 严格模式
        "jslint_happy": false,
        // 匿名函数后不加空格
        "space_after_anon_function": false,
        // 数组缩进
        "keep_array_indentation": false,
        // 函数缩进
        "keep_function_indentation": false,
        // 条件判断前加空格
        "space_before_conditional": true,
        // 不允许用 eval
        "eval_code": false,
        // Put braces on the same line as control statements
        "brace_style": "collapse",
        // Break chained method calls across subsequent lines
        "break_chained_methods": false,
        "unescape_strings": false
    }
}
